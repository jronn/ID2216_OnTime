<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timer_title"
        android:id="@+id/timerTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/journey_info"
        android:id="@+id/journeyInfoText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timerTitle"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timer"
        android:id="@+id/timerText"
        android:layout_below="@+id/journeyInfoText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_timer_button"
        android:id="@+id/cancelButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/timerTitle"
        android:layout_alignRight="@+id/timerTitle"
        android:layout_below="@+id/timerText"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/timer_info"
        android:id="@+id/timerInfoText"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/customTimeButton2"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_time_button"
        android:id="@+id/customTimeButton2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cancelButton"
        android:layout_alignStart="@+id/cancelButton"
        android:layout_alignEnd="@+id/cancelButton"
        android:layout_alignRight="@+id/cancelButton"
        android:layout_marginBottom="20dp"
        android:onClick="showTimePickerDialog"/>
</RelativeLayout>